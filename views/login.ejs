<%- include('layout'); -%>
  <div class="container my-2">
    <h2>Only recruiter is allowed to access certain features. Are you a recruiter? login now!</h2>
    <form action="/login" method="post" class="p-5">
      <div class="form-group">
        <label for="des">Email</label>
        <input name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp"
          placeholder="Enter Product Description" />
      </div>
      <div class="form-group">
        <label for="price">Password</label>
        <input type="text" name="password" class="form-control" id="password" aria-describedby="emailHelp"
          placeholder="Enter Your Price" />
      </div>
      <button type="submit" class="btn btn-primary mt-2">Login</button> <br />
      <br />
      <span class="text-info">Don't have an account? Sign up now.</span>
      <br />
      <a class="btn btn-sm btn-success" href="/">SignUp</a>
    </form>
  </div>